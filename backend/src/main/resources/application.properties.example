# ===========================================
# Todo List Demo - 配置模板
# ===========================================
# 复制此文件为 application-local.properties 或设置环境变量

# Server Configuration
server.port=8080

# Database Configuration
# 以下配置使用环境变量，格式：${变量名:默认值}
# DB_NAME - 数据库名称（默认：todo_db）
# DB_USERNAME - 数据库用户名（默认：root）
# DB_PASSWORD - 数据库密码（必须设置，无默认值）

spring.datasource.url=jdbc:mysql://localhost:3306/${DB_NAME:todo_db}?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=true

# ===========================================
# 启动方式
# ===========================================
# 方式一：设置环境变量后启动
#   export DB_PASSWORD=your_password
#   mvn spring-boot:run
#
# 方式二：命令行参数
#   mvn spring-boot:run -Dspring-boot.run.arguments="--DB_PASSWORD=your_password"
#
# 方式三：IDEA/VS Code 运行配置中添加环境变量
